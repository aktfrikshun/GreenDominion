<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0">
	<name>Easy Script</name>
	<author>zaragozaonline.com</author>
	<creationDate>June 2008</creationDate>
	<copyright>(C) 2008 zaragozaonline.com. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@zaragozaonline.com</authorEmail>
	<authorUrl>www.zaragozaonline.com</authorUrl>
	<version>1.5.0</version>
	<description>Easy script is the simplest module you have ever seen. Just paste the code in the texarea!</description>
	<files>
	<filename module="mod_easyscript">mod_easyscript.php</filename>
	<filename>index.html</filename>
    <filename>tmpl/default.php</filename>
    <filename>tmpl/index.html</filename>
	</files>	
	<params>
		<param name="Code" type="textarea" rows="10" cols="50" default="" description="Just past the code here!" />
		<param name="@spacer" type="spacer" default="" label="" description="" />	
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
	</params>		
	<params group="advanced">
		<param name="cache" type="list" default="1" label="Caching" description="Select whether to cache the content of this module">
			<option value="1">Use global</option>
			<option value="0">No caching</option>
		</param>
		<param name="cache_time" type="text" default="900" label="Cache Time" description="The time before the module is recached" />
	</params>
</install>